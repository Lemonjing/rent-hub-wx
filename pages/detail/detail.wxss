/* detail.wxss */

text {
  font-size: 14px;
  word-wrap: break-word;
}

.detail-container {
  display: flex;
  width: 90%;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 8px;
  padding-right: 8px;
}

.detail-content {
  padding-left: 40px;
  padding-top: 8px;
  padding-right: 40px;
  padding-bottom: 8px;
  margin-top: 40px;
  background-color: #fff;
  border: 1px solid red;
  border-radius: 5px;
}

.about-footer {
  position: absolute;
  bottom: 6rpx;
  font-family: Arial, Helvetica, sans-serif;
  font-size: 28rpx;
}

/**list.wxss**/

.news-item-container {
  background-color: #f2f2f2;
  width: 100%;
  /*padding-left: 200px;
  padding-right: 200px;*/
}

.news-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding-left: 8px;
  padding-top: 8px;
  padding-right:8px;
  padding-bottom: 8px;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 8px;
  background-color: #fff;
  border: 1px solid #eaeaea;
  border-bottom: 1px solid #d0d0d0;
  border-radius: 5px;
}

.news-item-right {
  width: 80px;
  height: 80px;
}

.news-image {
  width: 80px;
  height: 80px;
}

.news-item-left-bottom {
  display: flex;
  flex-direction: row;
  margin-top:20px;
}

.userface {
  width: 40px;
  height: 40px;
}

.news-item-text1 {
  font-size: 14px;
  margin-left: 20px;
  display: block;
}

.news-item-text2 {
  font-size: 14px;
  margin-left: 20px;
  margin-top: 20rpx;
  display: block;
}

.news-item-title {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 16px;
}

.load-btn {
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 16px;
  margin-bottom: 5rpx;
  /*display: block;*/
  line-height: 2.3;
  font-size: 13px;
  color:#fff;
  background-color: #36828b;
}

.container .search{
  width: 735rpx;
  height: 80rpx;
  padding: 12.5rpx 0 12.5rpx 16rpx;
  background: #36828b;
}
.container .search-left{
  flex: 8;
  background: #36828b;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 60rpx;
  font-size: 38rpx;
}
.search-placeholder{
  color: #fff;
  /*line-height: 20rpx;*/
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 10rpx 15rpx 0rpx 20rpx;
  margin-top:15rpx;
}

.container .search .search-right{
  flex: 1;
}

.container .search .search-right image{
  width: 55rpx;
  height: 55rpx;
  padding: 10rpx;
}

.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #36828b;
  color: #fff;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  position: fixed;
  top: 0;
  z-index: 9999;
}

.toptab.active{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  margin-top: 100rpx;
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0 10rpx 0;
}

.sort {
  width: 400rpx;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  font-size:16px;
  margin-left:180rpx;
  margin-top:20rpx;
}

.sort .active{
  color: #000;
  border-bottom: solid 2px #000;
}

.copyright {
  font-size: 14px;
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}
  <view class="news-item-container">
    <block wx:for="{{list}}" wx:for-index="id">
      <!--<text wx:if="{{item.header}}" class="sub-title">{{item.header}}</text>-->
      <navigator url="../detail/detail?id={{item.id}}">
        <view class="news-item">
          <view class="news-item-left">
            <text class="news-item-title">{{item.title}}</text>
            <view class="news-item-left-bottom">
              <image src="{{item.headimage}}" class="userface"/>
              <text class="news-item-time">{{item.posttime}}</text>
            </view>
          </view>
          <view class="news-item-right">
            <image src="{{item.image}}" class="news-image" />
          </view>
        </view>
      </navigator>
    </block>
    <button type="primary" class="load-btn" data-offset="{{offset}}" loading="{{loading}}" plain="{{plain}}" bindtap="loadMore"> 更多 </button>
    <text>=={{offset}}==</text>
  </view>

</view>